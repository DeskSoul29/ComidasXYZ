<!DOCTYPE html>
<html lang="es" >
  <head>
    <%- include('../tools/head'); %>
  </head>
  <body>
    <main>
      <div class="container px-4 py-5" id="featured-3">
        <div style="text-align: right">
          <a href="/homeadmin/menu">Volver</a>
        </div>
        <div style='text-align:right'>
          <a href="/logout">Cerrar Sesion</a>
        </div>
        <h2 class="pb-2 border-bottom">Agregar Menú</h2>
          
        <form class="row g-3" action="/homeadmin/menu/add" method="POST">
          <div class="feature col">
            <div class="mb-4 row">
                <label for="name" class="col-sm-2 col-form-label">Nombre</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="name" name="name" >
                </div>
              </div>
              <div class="mb-4 row">
                <label for="code" " class="col-sm-2 col-form-label">Dia</label>
                <div class="col-sm-10">
                  <select class="form-select" name="week">
                    <option value="Lunes" selected>Lunes</option>
                    <option value="Martes">Martes</option>
                    <option value="Miercoles">Miercoles</option>
                    <option value="Jueves">Jueves</option>
                    <option value="Viernes">Viernes</option>
                    <option value="Sabado">Sabado</option>
                    <option value="Domingo">Domingo</option>
                  </select>
                </div>
              </div>
              <div class="mb-4 row">
                <label for="name" class="col-sm-2 col-form-label">Descripción</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="description" name="description" >
                </div>
              </div>
              <div class="mb-4 row">
                <label for="description" class="col-sm-2 col-form-label">Productos</label>
                <div class="col-sm-10">
                  <% if (allProd){ %> <% allProd.forEach((allProd)=> { %>
                  <ul class="list-group">
                    <li class="list-group-item">
                      <input class="form-check-input me-1" type="checkbox" name="productos[]" value="<%= allProd._id %>" aria-label="...">
                      <%= allProd.name %>
                    </li>
                  </ul>
                  <% })}; %>
                </div>
              </div>
              

              <div class="col-auto">
                <button type="submit" class="btn btn-primary mb-3">Enviar Producto</button>
              </div>

          </div>
        </form>
          
        </div>

    </main>
 <!-- Alert -->
 <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

 <% if(typeof alert !="undefined" ) { %>
 <script type="text/JavaScript">
   Swal.fire({
           title: '<%= alert[0].alertTitle %>',
           text:'<%= alert[0].alertMessage %>',
           icon:'<%= alert[0].alertIcon %>',
           showConfirmButton: <%= alert[0].showConfirmButton %>,
           timer: <%= alert[0].timer %>
         }).then(()=>{
           window.location = '<%= alert[0].ruta %>'
         })
       </script>
 <% } %>
  </body>
</html>
