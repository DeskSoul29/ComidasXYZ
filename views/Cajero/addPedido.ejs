<!DOCTYPE html>
<html lang="es" >
  <head>
    <%- include('../tools/head'); %>
  </head>
  <body>
    <main>
      <div class="container px-4 py-5" id="featured-3">
        <div style="text-align: right">
          <a href="/homecajero">Volver</a>
        </div>
        <div style='text-align:right'>
          <a href="/logout">Cerrar Sesion</a>
        </div>
        <h2 class="pb-2 border-bottom">Agregar Pedido</h2>
          
        <form class="row g-3" action="/homecajero/add" method="POST">
          <div class="feature col">

            <div class="mb-4 row">
              <label for="description" class="col-sm-2 col-form-label">Productos</label>
              <div class="col-sm-10">
                <% if (allProd){ %> <% allProd.forEach((allProd)=> { %>
                <ul class="list-group">
                  <li class="list-group-item">
                    <input class="form-check-input me-1" type="checkbox" name="productos[]" value="<%= allProd._id %>" aria-label="...">
                    <%= allProd.name %>
                  </li>
                </ul>
                <% })}; %>
              </div>
            </div>

            <div class="mb-4 row">
                <label for="total" class="col-sm-2 col-form-label">Total</label>
                <div class="col-sm-10">
                  <input type="number" class="form-control" id="total" name="total" >
                </div>
              </div>
              
              <div class="mb-4 row">
                <label for="cliente" class="col-sm-2 col-form-label">Cliente</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="cliente" name="cliente" >
                </div>
              </div>
              
              

              <div class="col-auto">
                <button type="submit" class="btn btn-primary mb-3">Enviar Producto</button>
              </div>

          </div>
        </form>
          
        </div>

    </main>
 <!-- Alert -->
 <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

 <% if(typeof alert !="undefined" ) { %>
 <script type="text/JavaScript">
   Swal.fire({
           title: '<%= alert[0].alertTitle %>',
           text:'<%= alert[0].alertMessage %>',
           icon:'<%= alert[0].alertIcon %>',
           showConfirmButton: <%= alert[0].showConfirmButton %>,
           timer: <%= alert[0].timer %>
         }).then(()=>{
           window.location = '<%= alert[0].ruta %>'
         })
       </script>
 <% } %>
  </body>
</html>
