<!DOCTYPE html>
<html lang="es" >
  <head>
    <%- include('../tools/head'); %>
  </head>
  <body>
    <main>
      <div class="container px-4 py-5" id="featured-3">
        <div style="text-align: right">
          <a href="/logout">Cerrar Sesion</a>
        </div>
        <h2 class="pb-2 border-bottom">Cajero</h2>
        <div class="row g-4 py-5 row-cols-1">
          <a class="btn btn-primary" href="/homecajero/add" role="button"
            >Agregar Pedido</a
          >

            <table
            id="dtBasicExample"
            class="table table-striped table-bordered table-sm"
            cellspacing="0"
            width="100%"
          >
            <thead>
              <tr>
                <th class="th-sm">Productos</th>
                <th class="th-sm">Total</th>
                <th class="th-sm">Estado</th>
                <th class="th-sm">Fecha</th>
                <th class="th-sm">Cliente</th>
              </tr>
            </thead>
            <tbody>
              <% if (allPedido){ allPedido.forEach((allPedido)=> { %>
              <tr>
                <td><%= allPedido.productos %></td>
                <td><%= allPedido.total %></td>
                <td><%= allPedido.estado %></td>
                <td><%= allPedido.fecha %></td>
                <td><%= allPedido.usuario %></td>
                <td>
                  <a
                    type="button"
                    onclick='eliminar_user("<%= allPedido._id %>")'
                    data-target="#deleteModal"
                    data-toggle="modal"
                    class="btn btn-danger btn-circle btn-sm"
                  >
                    <i class="fas fa-trash"></i>
                  </a>
                  <a
                    href="/homepedido/Edit/<%= allPedido._id %>"
                    type="button"
                    class="btn btn-warning btn-circle btn-sm"
                  >
                    <i class="fas fa-pen-to-square"></i>
                  </a>
                </td>
              </tr>
              <% })}; %>
            </tbody>
            <tfoot>
              <tr>
                <th>Productos</th>
                <th>Total</th>
                <th>Estado</th>
                <th>Fecha</th>
                <th>Cliente</th>
              </tr>
            </tfoot>
          </table>

          </div>
          
        </div>
      </div>


      <!-- Bootstrap core JavaScript-->
      <script src="/vendor/jquery/jquery.min.js"></script>
      <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

      <!-- Core plugin JavaScript-->
      <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

      <!-- Page level plugins -->
      <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
      <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>

      <!-- Validations -->
      <script type="text/javascript" src="/js/validation.js"></script>

      <script>
        $(document).ready(function () {
          $("#dtBasicExample").DataTable();
          $(".dataTables_length").addClass("bs-select");
        });
      </script>

      <!-- Alert -->
      <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

      <% if(typeof alert !="undefined" ) { %>
      <script type="text/JavaScript">
        Swal.fire({
                title: '<%= alert[0].alertTitle %>',
                text:'<%= alert[0].alertMessage %>',
                icon:'<%= alert[0].alertIcon %>',
                showConfirmButton: <%= alert[0].showConfirmButton %>,
                timer: <%= alert[0].timer %>
              }).then(()=>{
                window.location = '<%= alert[0].ruta %>'
              })
      </script>
      <% } %>
    </main>
  </body>
</html>
